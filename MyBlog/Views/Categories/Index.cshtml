@model IEnumerable<MyBlog.Models.Category>

@{
    ViewBag.Title = "Kategoriler Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<center><h2>Kategori Yönetimi</h2></center>

<p>
    <a href="@Url.Action("Create")" class="btn btn-outline-success">Yeni Kategori</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Enabled)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Enabled)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.CategoryID }) |
            @Html.ActionLink("Detay", "Details", new { id=item.CategoryID }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.CategoryID })
        </td>
    </tr>
}

</table>
